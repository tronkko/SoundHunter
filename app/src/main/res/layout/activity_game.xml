<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fgj16.soundhunter.GameActivity"
                android:background="@android:color/black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:id="@+id/frameLayout">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button_1"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/hiisi"
                android:scaleType="centerCrop"
                android:background="@android:color/black"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button_2"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/joukahainen"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                android:background="@android:color/black"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Large Text"
                android:id="@+id/text_team1"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Large Text"
                android:id="@+id/text_team2"
                android:layout_row="1"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button_3"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/ukko"
                android:scaleType="centerCrop"
                android:background="@android:color/black"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button_4"
                android:layout_row="2"
                android:layout_column="1"
                android:src="@drawable/sampo"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                android:background="@android:color/black"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/text_team3"
                android:layout_row="3"
                android:layout_column="0"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/text_team4"
                android:layout_row="3"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"/>

        </GridLayout>
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hiisi scores"
        android:id="@+id/text_score"
        android:layout_alignParentTop="true"
        android:textColor="#ffee00"
        android:textAlignment="center"
        android:textSize="48dp"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:visibility="gone"
        android:textStyle="bold"/>
</RelativeLayout>
